 <div class="layout-row layout-xs-column">
      {{#each exercises as |exercise| }}
        {{#paper-card class="flex-xs-100 flex-gt-xs-50" as |card|}}
          {{#card.title as |title|}}
            {{#title.text as |text|}}
            {{#text.headline}}{{exercise.name}}{{/text.headline}}
            {{#text.subhead  }}
              <div class="card-weight">
                120kg
              </div>
            {{/text.subhead}}
            {{/title.text}}

            {{#card.media size="xl"}}
              <div class="card-media"></div>
            {{/card.media}}
          {{/card.title}}
          {{#card.actions}}
            {{#paper-button onClick=(route-action "registerExercise" exercise)}}Registar{{/paper-button}}
          {{/card.actions}}
        {{/paper-card}}
      {{/each}}
  </div>
